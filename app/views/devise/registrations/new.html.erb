<% content_for :title, "Criar conta" %>
<% content_for :subtitle, "Junte-se ao AquaFarm" %>

<h1 class="mb-6 text-2xl font-semibold">Criar conta</h1>

<%= form_with model: resource, url: registration_path(resource_name), class: "space-y-5", data: { turbo: false } do |f| %>
  <div>
    <label class="<%= ui_label_classes %>">Email</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: ui_input_classes, placeholder: "voce@exemplo.com" %>
    <% resource.errors[:email].each do |msg| %><p class="<%= ui_error_text_classes %>"><%= msg %></p><% end %>
  </div>

  <div>
    <label class="<%= ui_label_classes %>">Senha</label>
    <%= f.password_field :password, autocomplete: "new-password", class: ui_input_classes, placeholder: "mín. 6 caracteres" %>
    <% resource.errors[:password].each do |msg| %><p class="<%= ui_error_text_classes %>"><%= msg %></p><% end %>
  </div>

  <div>
    <label class="<%= ui_label_classes %>">Confirmar senha</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: ui_input_classes, placeholder: "repita a senha" %>
    <% resource.errors[:password_confirmation].each do |msg| %><p class="<%= ui_error_text_classes %>"><%= msg %></p><% end %>
  </div>

  <div class="pt-2">
    <%= f.submit "Criar conta", class: ui_btn_primary_classes %>
  </div>
<% end %>

<div class="mt-6 space-y-2 text-center text-sm">
  <p class="text-neutral-600">
    Já possui conta?
    <%= link_to "Entrar", new_session_path(resource_name), class: ui_link_classes %>
  </p>
</div>
