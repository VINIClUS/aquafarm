<div class="relative overflow-x-auto shadow-md sm:rounded-lg mb-3">
  <h1 class="<%= ui_title_classes %>">Leitura de <%= l @sensor_reading.reading_time, format: :long %> — <%= @sensor_reading.pond.name %></h1>
  <hr>
</div>

<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
  <div class="bg-white dark:bg-gray-900">
    <table class="<%= t_table %>">
      <tbody>
        <tr class="<%= t_tr %>"><th class="<%= t_th %>">Temperatura (°C)</th><td class="<%= t_td %>"><%= @sensor_reading.temp_c %></td></tr>
        <tr class="<%= t_tr %>"><th class="<%= t_th %>">pH</th><td class="<%= t_td %>"><%= @sensor_reading.ph %></td></tr>
        <tr class="<%= t_tr %>"><th class="<%= t_th %>">Oxigênio dissolvido (mg/L)</th><td class="<%= t_td %>"><%= @sensor_reading.do_mg_l %></td></tr>
        <tr class="<%= t_tr %>"><th class="<%= t_th %>">Turbidez (NTU)</th><td class="<%= t_td %>"><%= @sensor_reading.turbidity_ntu %></td></tr>
        <tr class="<%= t_tr %>"><th class="<%= t_th %>">Salinidade (ppt)</th><td class="<%= t_td %>"><%= @sensor_reading.salinity_ppt %></td></tr>
        <tr class="<%= t_tr %>"><th class="<%= t_th %>">Flag</th><td class="<%= t_td %>"><%= @sensor_reading.flagged ? "Sim" : "Não" %> <%= @sensor_reading.flag_reason.present? ? "(#{@sensor_reading.flag_reason})" : "" %></td></tr>
      </tbody>
    </table>
  </div>
</div>

<div class="mt-3 flex gap-2">
  <!-- <%= link_to "Editar", [@sensor_reading.pond, @sensor_reading], class: ui_btn_primary %> -->
  <%= link_to 'Apagar', pond_sensor_reading_path(@sensor_reading.pond, @sensor_reading), class: ui_btn_danger,
                            data: { turbo_method: :delete, turbo_confirm: 'Tem certeza?' } %>
  <%= link_to "Voltar", pond_sensor_readings_path(@sensor_reading.pond), class: ui_btn_primary %>
  <!-- <%= link_to "Voltar", sensor_readings_path, class: ui_btn_primary %> -->
</div>
