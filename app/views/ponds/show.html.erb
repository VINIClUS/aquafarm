<div class="relative overflow-x-auto shadow-md sm:rounded-lg mb-3">
  <h1 class="<%= ui_title_classes %>">Detalhes do Tanque</h1>
  <hr>
</div>

<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
  <div class="bg-white dark:bg-gray-900">
    <table class="<%= t_table %>">
      <tbody>
        <tr class="<%= t_tr %>"><th class="<%= t_th %>">ID</th>
        <td class="<%= t_td %>"><%= @pond.id %></td></tr>
        
        <tr class="<%= t_tr %>"><th class="<%= t_th %>">Nome</th>
        <td class="<%= t_td %>"><%= @pond.name %></td></tr>
        
        <tr class="<%= t_tr %>"><th class="<%= t_th %>">Volume (L)</th>
        <td class="<%= t_td %>"><%= @pond.volume %></td></tr>
        
        <tr class="<%= t_tr %>"><th class="<%= t_th %>">Fazenda</th>
        <td class="<%= t_td %>"><%= @pond.farm.name %></td></tr>
        
        <tr class="<%= t_tr %>"><th class="<%= t_th %>">Criado em</th>
        <td class="<%= t_td %>"><%= l @pond.created_at, format: :long %></td></tr>
        
        <tr class="<%= t_tr %>"><th class="<%= t_th %>">Atualizado em</th>
        <td class="<%= t_td %>"><%= l @pond.updated_at, format: :long %></td></tr>
      </tbody>
    </table>
  </div>
</div>

