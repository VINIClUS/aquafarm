<%= form_with model: [@pond], local: true do |f| %>
  <% if @pond.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(@pond.errors.count, "erro") %> proibiu este tanque de ser salvo:</h2>
      <ul>
        <% @pond.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :farm_id, "Fazenda", class: ui_label_classes %>
    <%= f.collection_select :farm_id, policy_scope(Farm), :id, :name, class: ui_input_classes %>
  </div>

  <div class="field">
    <%= f.label :name, "Nome do Tanque", class: ui_label_classes %>
    <%= f.text_field :name, class: ui_input_classes %>
  </div>

  <div class="field">
    <%= f.label :volume, "Volume (L)", class: ui_label_classes %>
    <%= f.number_field :volume, class: ui_input_classes %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "Salvar", class: ui_btn_primary%>
    <%= link_to "Cancelar", ponds_path, class: ui_btn_danger %>
  </div>
<% end %>
