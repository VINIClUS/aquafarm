<%= form_with model: [@pond], local: true do |f| %>
  <% if @pond.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(@pond.errors.count, "erro") %> proibiu este tanque de ser salvo:</h2>
      <ul>
        <% @pond.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :farm_id, "Fazenda" %><br>
    <%= f.collection_select :farm_id, policy_scope(Farm), :id, :name %>
  </div>

  <div>
    <%= f.label :name, "Nome do Tanque" %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :volume, "Volume (L)" %><br>
    <%= f.number_field :volume %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
