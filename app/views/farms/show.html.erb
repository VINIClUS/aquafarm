<h1><%= @farm.name %></h1>

<h2>Tanques</h2>
<%= link_to "Adicionar Tanque", new_farm_pond_path(@farm), class: "btn btn-primary" %>

<ul>
  <% @farm.ponds.each do |pond| %>
    <li>
      <%= link_to pond.name, pond_path(pond) %> — <%= pond.volume %> m³
    </li>
  <% end %>
</ul>

<div class="mt-3 flex gap-2">
  <%= link_to "Editar Fazenda", edit_farm_path(@farm), class: "btn btn-primary" %>
  <%= link_to "Remover Fazenda", farm_path(@farm), method: :delete, data: { turbo_confirm: "Confirma remover?" }, class: "btn btn-danger" %>
  <%= link_to "Voltar", farms_path, class: "btn" %>
</div>
